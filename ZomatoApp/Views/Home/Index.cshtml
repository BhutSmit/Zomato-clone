@using System.Data;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home Page";
}
@using ZomatoApp.BAL;

<style>

    .card{

        width: 200px;
        border: 3px solid rgba(100 , 150 , 250 , 0.2);
        border-radius: 10px;
        position: relative;
        overflow: hidden;
        transition: all 0.2s linear;
    }

    .card h1{

        background-color: rgba(50 , 80 , 250 , 0.1);
        font-size: 15px;
        font-weight: 600; 
        z-index: 2;
        border-radius: 20px;
        text-align: center;
    }

    .card::before{

        content: "";
        width: 100%;
        height: 2px;
        position: absolute;
        top: 0;
        left: 0;
        background-color: rgba(100 , 150 , 250 , 0.4);
        /*box-shadow: 0px 10px 100px 50px rgba(200 , 230 , 200 , 0.5);*/
        transition: all 0.2s linear;

    }

    .card:hover::before{

       height: 100%;
       background-color: rgba(100 , 150 , 250 , 0.1);
    }

</style>

<div class="text-start">
    <h1 class="display-4 mb-1">Welcome <span class="fs-3 fw-bold">@CV.UserName()</span></h1>
    <p class="mb-4 text-secondary">Manage your Project with us.</p>


    <div class="d-flex justify-content-start align-items-center flex-wrap">

        @foreach (DataRow dr in Model.Rows)
        {

            <div class="px-4 py-3 mx-2 rounded card text-center">

                <h1 class="my-2 py-1 px-2">
                    @if(Convert.ToString(dr["DataName"]) == "Country")
                    {   
                        <i class="fa-solid fa-earth-americas" style="font-size: 13px;"></i>
                    }
                    @if(Convert.ToString(dr["DataName"]) == "State")
                    {
                        <i class="fa-solid fa-flag-usa" style="font-size: 13px;"></i>
                    }
                    @if(Convert.ToString(dr["DataName"]) == "City")
                    {
                        <i class="fa-solid fa-city" style="font-size: 13px;"></i>
                    }
                    @if(Convert.ToString(dr["DataName"]) == "Restaurant")
                    {
                        <i class="fa-solid fa-utensils" style="font-size: 13px;"></i>
                    }
                    @if(Convert.ToString(dr["DataName"]) == "FoodType")
                    {
                        <i class="fa-solid fa-bars" style="font-size: 13px"></i>
                    }
                    @if(Convert.ToString(dr["DataName"]) == "Food")
                    {
                        <i class="fa-solid fa-bowl-food" style="font-size: 13px"></i>
                    }
                    @dr["DataName"]
                </h1>
                <p class="fs-5 fw-bold">@dr["DataCount"]</p>

            </div>

        }

    </div

</div>
