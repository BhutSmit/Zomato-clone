@using System.Data;
@{
    Layout = "~/Views/Shared/_Layout_User.cshtml";
    ViewData["Title"] = "User Page";
}

@model ZomatoApp.Models.MST_OrderModel;

<div class="container border border-gray rounded p-5 shadow" style="margin: 150px auto;">

    <h2><i class="bi bi-gear me-2 pb-5" style="font-size: 25px"></i>Order</h2>

    <hr />

    <form class="pt-3" method="post" asp-controller="User" asp-action="MST_CartOrder">

        <div class="col my-4">
            <input type="text" class="form-control" asp-for="Address" placeholder="Address" aria-label="First name">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mt-4">

            @*<input type="hidden" asp-for="OrderID" />*@
            <button class="btn btn-primary" type="submit">Submit</button>

        </div>


    </form>

</div>