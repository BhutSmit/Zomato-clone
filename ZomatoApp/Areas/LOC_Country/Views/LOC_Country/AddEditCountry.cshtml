@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ZomatoApp.Areas.LOC_Country.Models.LOC_CountryModel;

<div class="mt-4 mb-2">
    <form asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="CountryList">
        <button class="btn border border-secondary text-secondary" type="submit">Back</button>
    </form>

</div>

<div class="container border border-gray rounded p-5 shadow">

    <h2><i class="bi bi-gear me-2 pb-5" style="font-size: 25px"></i>Country</h2>

    <hr />

    <form class="pt-3" method="post" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="SaveCountry">
        <div class="col my-4">
            <input type="text" class="form-control" asp-for="CountryName" placeholder="Country Name" aria-label="First name">
            <span asp-validation-for="CountryName" class="text-danger"></span>
        </div>

        <div class="mt-4">

            <input type="hidden" asp-for="CountryID" />
            <button class="btn btn-primary" type="submit">Submit</button>

        </div>


    </form>

</div>