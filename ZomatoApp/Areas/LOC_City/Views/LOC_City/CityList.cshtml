@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
@model System.Data.DataTable;

<style>

    .line {
        width: 50%;
        height: 1px;
        border: 1px solid rgba(0, 0, 0, 0.1);
    }

    ::placeholder {
        font-size: 13px;
    }

</style>

<div class="pagetitle my-4 mx-2">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">City @TempData["State"]</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="border rounded px-5 py-3 shadow-sm mb-3">

    <p class="text-secondary">
        <span class="ms-1 me-2">&#x2022</span> Filter
    </p>

    <form asp-area="LOC_City" asp-controller="LOC_City">
        <div class="row">
            <div class="col ms-auto">
                <label class="visually-hidden" for="autoSizingInputGroup">Username</label>
                <div class="input-group">
                    <div class="input-group-text bg-transparent" style="font-size: 15px"><i class="bi bi-search"></i></div>
                    <input type="text" class="form-control" id="CityName" name="CityName" placeholder="Search City Name here">
                    @* <input type="hidden" name="CountryName" value="CountryName" />*@
                </div>
            </div>

            <div class="col">
                <label class="visually-hidden" for="autoSizingInputGroup">Username</label>
                <div class="input-group">
                    <div class="input-group-text bg-transparent" style="font-size: 15px"><i class="bi bi-search"></i></div>
                    <input type="text" class="form-control" id="CityCode" name="CityCode" placeholder="Search City Code here">
                    @*<input type="hidden" name="CountryCode" value="CountryCode" />*@
                </div>
            </div>

            <div class="col">
                <label class="visually-hidden" for="autoSizingInputGroup">Username</label>
                <div class="input-group">
                    <div class="input-group-text bg-transparent" style="font-size: 15px"><i class="bi bi-search"></i></div>
                    <input type="text" class="form-control" id="StateName" name="StateName" placeholder="Search State Name here">
                    @*<input type="hidden" name="CountryCode" value="CountryCode" />*@
                </div>
            </div>

            <div class="col">
                <label class="visually-hidden" for="autoSizingInputGroup">Username</label>
                <div class="input-group">
                    <div class="input-group-text bg-transparent" style="font-size: 15px"><i class="bi bi-search"></i></div>
                    <input type="text" class="form-control" id="CountryName" name="Countryname" placeholder="Search Country Name here">
                    @*<input type="hidden" name="CountryCode" value="CountryCode" />*@
                </div>
            </div>

            <div class="col d-flex">
                <div>
                    <div class="input-group">
                        <input type="submit" asp-action="LOC_CityFilter" class="btn border border-primary text-primary" id="" value="Apply Filter" placeholder="Search Country Code here">
                    </div>
                </div>

                <div class="ms-2">
                    <div class="input-group">
                        <input type="submit" asp-action="LOC_CityList" class="btn" style="border: 2px solid rgba(10 , 10 , 10 , 0.5)" id="" value="Clear Filter" placeholder="Search Country Code here">
                    </div>
                </div>
            </div>

        </div>
    </form>

</div>

<div class="border rounded px-5 py-2 shadow-sm mb-3">

    <div>
        <div class="w-25 my-3">
            <p class="text-secondary">
                <span class="ms-1 me-2">&#x2022</span> Search With JQuery
            </p>
            <label class="visually-hidden" for="autoSizingInputGroup">Username</label>
            <div class="input-group">
                <div class="input-group-text bg-transparent" style="font-size: 15px"><i class="bi bi-search"></i></div>
                <input type="text" value="@TempData["State"]" class="form-control" id="myInput" placeholder="Search here">
            </div>
        </div>

    </div>

</div>

<div class="border rounded p-5 shadow">

    <div class="d-flex justify-content-between align-items-center">

        <h5 class="fw-bold"><i class="bi bi-gear me-2" style="font-size: 20px"></i>CITY LIST</h5>
        <a asp-area="LOC_City" asp-controller="LOC_City" asp-action="AddEditCity">
            <button class="btn bg-success text-white py-2"><i class="bi bi-plus-circle me-2"></i>Add City</button>
        </a>

    </div>

    <hr />

    @*<div class="border border-dark rounded ps-3 pe-5 py-2 ms-auto w-25 my-3">

    Search here

    </div>*@

    @*<input type="text" placeholder="Search here" class="border border-dark d-block rounded ps-3 pe-5 py-2 ms-auto my-3" />*@



    <div>
        @if (Model.Rows.Count > 0)
        {
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        @*<th scope="col">CityId</th>*@@*<th scope="col">CityId</th>*@
                        <th scope="col" class="text-center">CityName</th>
                        <th scope="col" class="text-center">State</th>
                        <th scope="col" class="text-center">Country</th>
                        <th scope="col" class="text-center">Created</th>
                        <th scope="col" class="text-center">Modified</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody id="myTable">
                    @foreach (DataRow dr in Model.Rows)
                    {

                        <tr>
                            @*<td class="text-center">@dr["CityId"]</td>*@@*<td class="text-center">@dr["CityId"]</td>*@
                            <td class="text-center">@dr["CityName"]</td>
                            <td class="text-center">@dr["StateName"]</td>
                            <td class="text-center">@dr["CountryName"]</td>
                            <td class="text-center">@dr["Created"]</td>
                            <td class="text-center">@dr["Modified"]</td>
                            <td class="text-center d-flex justify-content-center align-items-center">

                                <form asp-area="LOC_City" asp-controller="LOC_City" asp-action="AddEditCity">
                                    <input type="hidden" name="CityID" value="@Convert.ToInt32(dr["CityID"])" />
                                    <button type="submit" class="btn border border-primary text-primary py-1 me-2"><i class="bi bi-pen" style="font-size: 14px"></i></button>
                                </form>
                                <form asp-area="LOC_City" asp-controller="LOC_City" asp-action="DeleteCity">
                                    <input type="hidden" name="CityID" value="@Convert.ToInt32(dr["CityID"])" />
                                    <button type="submit" class="btn border border-danger text-danger py-1" onclick="return deleteCity()"><i class="bi bi-trash" style="font-size: 14px"></i></button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h1 class="text-center">No Data Found</h1>
        }

    </div>

</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

@section Scripts {

    <script>
        $(document).ready(function () {
            //alert("Hello");
            $("#myInput").on("keyup", function () {
                //alert("Function");
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

        function deleteCity() {

            if (confirm("Are you sure want to delete?")) {

                return true

            }

            return false

        }

    </script>

}