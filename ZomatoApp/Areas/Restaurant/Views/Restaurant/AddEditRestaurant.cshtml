@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ZomatoApp.Areas.Restaurant.Models.RestaurantModel;

<div class="mt-4 mb-2">
    <form asp-area="Restaurant" asp-controller="Restaurant" asp-action="RestaurantList">
        <button class="btn border border-secondary text-secondary" type="submit">Back</button>
    </form>

</div>

<div class="container border border-gray rounded p-5 shadow">

    <h2><i class="bi bi-gear me-2 pb-5" style="font-size: 25px"></i>Restaurant</h2>

    <hr />

    <form class="pt-3" method="post" asp-area="Restaurant" asp-controller="Restaurant" asp-action="SaveRestaurant" enctype="multipart/form-data">
        @Html.HiddenFor(x => x.RestaurantImage)
        <div class="col my-4">
            <input type="text" class="form-control" asp-for="RestaurantName" placeholder="Restaurant Name" aria-label="First name">
            <span asp-validation-for="RestaurantName" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <input type="file" class="form-control" asp-for="File" placeholder="Restaurant Image" aria-label="First name">
            <span asp-validation-for="File" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <input type="text" class="form-control" asp-for="Address" placeholder="Address" aria-label="Last name">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <input type="text" class="form-control" asp-for="PhoneNo" placeholder="PhoneNo" aria-label="Last name">
            <span asp-validation-for="PhoneNo" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <input type="email" class="form-control" asp-for="Email" placeholder="Email" aria-label="Last name">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <input type="number" class="form-control" asp-for="Rating" placeholder="Rating" aria-label="Last name">
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="d-flex my-4">
            <div class="col me-2">
                <input type="time" class="form-control" asp-for="OpeningTime" placeholder="Opening Time" aria-label="Last name">
                <span asp-validation-for="OpeningTime" class="text-danger"></span>
            </div>

            <div class="col">
                <input type="time" class="form-control" asp-for="ClosingTime" placeholder="Closing Time" aria-label="Last name">
                <span asp-validation-for="ClosingTime" class="text-danger"></span>
            </div>
        </div>

        <div class="col my-4">
            @*<input type="text" class="form-control" asp-for="IsActive" placeholder="IsActive" aria-label="Last name">*@
            <input type="radio" name="IsActive" asp-for="IsActive" value="true" /><div class="d-inline-block ms-2 me-2">Active</div>
            <input type="radio" name="IsActive" asp-for="IsActive" value="false" /><div class="d-inline-block ms-2 me-2">Non Active</div>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <input type="text" class="form-control" asp-for="CityID" placeholder="CityID" aria-label="Last name">
            <span asp-validation-for="CityID" class="text-danger"></span>
        </div>

        <div class="mt-4">

            <input type="hidden" asp-for="RestaurantID" />
            <button class="btn btn-primary" type="submit">Submit</button>

        </div>


    </form>

</div>