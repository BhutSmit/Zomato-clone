@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ZomatoApp.Areas.FoodType.Models.FoodTypeModel;
@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

<div class="mt-4 mb-2">
    <form asp-area="FoodType" asp-controller="FoodType" asp-action="RestaurantWiseFoodType">
        <input type="hidden" name="RestaurantID" value="@HttpContextAccessor.HttpContext.Session.GetInt32("RestaurantID")" />
        <button class="btn border border-secondary text-secondary" type="submit">Back</button>
    </form>

</div>


<div class="container border border-gray rounded p-5 shadow">

    <h2><i class="bi bi-gear me-2 pb-5" style="font-size: 25px"></i>FoodType</h2>

    <hr />

    <form class="pt-3" method="post" asp-area="FoodType" asp-controller="FoodType" asp-action="SaveFoodType">

        <div class="col my-4">
            <input type="text" class="form-control" asp-for="FoodTypeName" placeholder="FoodType Name" aria-label="First name">
            <span asp-validation-for="FoodTypeName" class="text-danger"></span>
        </div>

       @* <div class="col my-4">
            <input type="text" class="form-control" asp-for="RestaurantID" placeholder="Restaurant" aria-label="Last name">
            <span asp-validation-for="RestaurantID" class="text-danger"></span>
        </div>*@

        <div class="col my-4">
            <input type="text" class="form-control" asp-for="FoodTypeImage" placeholder="FoodType Image" aria-label="Last name">
            <span asp-validation-for="FoodTypeImage" class="text-danger"></span>
        </div>

        <div class="col mt-4">

            <input type="hidden" asp-for="FoodTypeID" />
            <button class="btn btn-primary" type="submit">Submit</button>

        </div>

    </form>

</div>